<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_schutztat_assessment_tree" model="ir.ui.view">
        <field name="name">schutztat.assessment.tree</field>
        <field name="model">schutztat.assessment</field>
        <field name="arch" type="xml">
            <tree decoration-success="status == 'approved'" decoration-muted="status == 'archived'">
                <field name="title"/>
                <field name="category"/>
                <field name="status" widget="badge"
                       decoration-info="status == 'draft'"
                       decoration-warning="status == 'in_review'"
                       decoration-success="status == 'approved'"/>
                <field name="hazard_count"/>
                <field name="action_count"/>
                <field name="synced_at"/>
            </tree>
        </field>
    </record>

    <record id="view_schutztat_assessment_form" model="ir.ui.view">
        <field name="name">schutztat.assessment.form</field>
        <field name="model">schutztat.assessment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="status" widget="statusbar"
                           statusbar_visible="draft,in_review,approved"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="title" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="category"/>
                            <field name="site_id"/>
                            <field name="django_created_at"/>
                        </group>
                        <group>
                            <field name="created_by_id"/>
                            <field name="approved_by_id"/>
                            <field name="approved_at"/>
                            <field name="synced_at"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" readonly="1"/>
                        </page>
                        <page string="Hazards">
                            <field name="hazard_ids" readonly="1">
                                <tree>
                                    <field name="title"/>
                                    <field name="severity"/>
                                    <field name="probability"/>
                                    <field name="risk_score"/>
                                    <field name="risk_level" widget="badge"
                                           decoration-danger="risk_level == 'critical'"
                                           decoration-warning="risk_level == 'high'"
                                           decoration-info="risk_level == 'medium'"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Actions">
                            <field name="action_ids" readonly="1">
                                <tree>
                                    <field name="title"/>
                                    <field name="status" widget="badge"/>
                                    <field name="priority"/>
                                    <field name="due_date"/>
                                    <field name="is_overdue" widget="boolean"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_schutztat_assessment" model="ir.actions.act_window">
        <field name="name">Assessments</field>
        <field name="res_model">schutztat.assessment</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
