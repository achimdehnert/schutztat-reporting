<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_schutztat_action_item_list" model="ir.ui.view">
        <field name="name">schutztat.action.item.list</field>
        <field name="model">schutztat.action.item</field>
        <field name="arch" type="xml">
            <list decoration-danger="is_overdue" decoration-success="status == 'done'">
                <field name="title"/>
                <field name="status" widget="badge"
                       decoration-info="status == 'open'"
                       decoration-warning="status == 'in_progress'"
                       decoration-success="status == 'done'"/>
                <field name="priority"/>
                <field name="due_date"/>
                <field name="is_overdue" column_invisible="1"/>
                <field name="assessment_id"/>
                <field name="hazard_id"/>
                <field name="synced_at"/>
            </list>
        </field>
    </record>

    <record id="view_schutztat_action_item_form" model="ir.ui.view">
        <field name="name">schutztat.action.item.form</field>
        <field name="model">schutztat.action.item</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="status" widget="statusbar"
                           statusbar_visible="open,in_progress,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="title" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="priority"/>
                            <field name="due_date"/>
                            <field name="assigned_to_id"/>
                        </group>
                        <group>
                            <field name="assessment_id"/>
                            <field name="hazard_id"/>
                            <field name="completed_at"/>
                            <field name="synced_at"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_schutztat_action_item" model="ir.actions.act_window">
        <field name="name">Action Items</field>
        <field name="res_model">schutztat.action.item</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
