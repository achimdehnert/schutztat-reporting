<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_schutztat_hazard_tree" model="ir.ui.view">
        <field name="name">schutztat.hazard.tree</field>
        <field name="model">schutztat.hazard</field>
        <field name="arch" type="xml">
            <tree decoration-danger="risk_level == 'critical'" decoration-warning="risk_level == 'high'">
                <field name="title"/>
                <field name="assessment_id"/>
                <field name="severity"/>
                <field name="probability"/>
                <field name="risk_score"/>
                <field name="risk_level" widget="badge"
                       decoration-danger="risk_level == 'critical'"
                       decoration-warning="risk_level == 'high'"
                       decoration-info="risk_level == 'medium'"
                       decoration-success="risk_level == 'low'"/>
                <field name="synced_at"/>
            </tree>
        </field>
    </record>

    <record id="view_schutztat_hazard_form" model="ir.ui.view">
        <field name="name">schutztat.hazard.form</field>
        <field name="model">schutztat.hazard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="title" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="assessment_id"/>
                            <field name="severity"/>
                            <field name="probability"/>
                            <field name="risk_score"/>
                            <field name="risk_level" widget="badge"/>
                        </group>
                        <group>
                            <field name="django_created_at"/>
                            <field name="django_updated_at"/>
                            <field name="synced_at"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" readonly="1"/>
                        </page>
                        <page string="Mitigation">
                            <field name="mitigation" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_schutztat_hazard" model="ir.actions.act_window">
        <field name="name">Hazards</field>
        <field name="res_model">schutztat.hazard</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
