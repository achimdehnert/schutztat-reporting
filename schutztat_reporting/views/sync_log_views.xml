<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_schutztat_sync_log_tree" model="ir.ui.view">
        <field name="name">schutztat.sync.log.tree</field>
        <field name="model">schutztat.sync.log</field>
        <field name="arch" type="xml">
            <tree decoration-danger="status == 'error'" decoration-success="status == 'done'">
                <field name="model_name"/>
                <field name="started_at"/>
                <field name="finished_at"/>
                <field name="records_created"/>
                <field name="records_updated"/>
                <field name="status" widget="badge"
                       decoration-info="status == 'running'"
                       decoration-success="status == 'done'"
                       decoration-danger="status == 'error'"/>
            </tree>
        </field>
    </record>

    <record id="view_schutztat_sync_log_form" model="ir.ui.view">
        <field name="name">schutztat.sync.log.form</field>
        <field name="model">schutztat.sync.log</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="model_name"/>
                            <field name="status"/>
                        </group>
                        <group>
                            <field name="started_at"/>
                            <field name="finished_at"/>
                            <field name="records_created"/>
                            <field name="records_updated"/>
                        </group>
                    </group>
                    <group string="Error" invisible="status != 'error'">
                        <field name="error_message" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_schutztat_sync_log" model="ir.actions.act_window">
        <field name="name">Sync Logs</field>
        <field name="res_model">schutztat.sync.log</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
